<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_jeans_description">



    <ImageView
        android:background="@drawable/ic_launcher_foreground"
        android:id="@+id/jeans_image_description"
        android:layout_width="match_parent"
        android:layout_height="547dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTintMode="add"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/nav_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:navigationIcon="@drawable/ic_back" />


    <TextView
        android:layout_marginStart="14dp"
        android:id="@+id/jeans_description_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/jeans"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jeans_image_description" />

    <TextView
        android:layout_marginStart="14dp"
        android:id="@+id/jeans_price_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1999 P"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jeans_description_des" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add"
        android:layout_width="292dp"
        android:layout_height="46dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="3dp"
        android:background="@color/red"
        android:text="Добавить в корзину"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jeans_price_description" />

    <ImageButton

        android:id="@+id/add_favorites"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:src="@drawable/void_heart"
        app:layout_constraintBottom_toBottomOf="@+id/btn_add"
        app:layout_constraintLeft_toRightOf="@id/btn_add"
        app:layout_constraintTop_toTopOf="@id/btn_add" />
</androidx.constraintlayout.widget.ConstraintLayout>