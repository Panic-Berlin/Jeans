<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">


    <ImageView
        android:id="@+id/jeans_image"
        android:layout_width="170dp"
        android:layout_height="217dp"
        android:src="@drawable/ic_launcher_foreground"/>

    <TextView
        android:layout_marginTop="3dp"
        android:id="@+id/jeans_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEW"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/jeans_image" />
    <TextView
        android:id="@+id/jeans_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Описание"
        android:maxLength="22"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/jeans_old"/>

    <TextView
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/jeans_description"
        android:id="@+id/jeans_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="1 999P"/>

    <ImageButton
        android:id="@+id/item_favorite"
        android:layout_marginRight="12dp"
        android:layout_marginTop="3dp"
        android:layout_width="22dp"
        android:layout_height="19dp"
        android:background="@drawable/void_heart"
        app:layout_constraintRight_toRightOf="@id/jeans_image"
        app:layout_constraintTop_toBottomOf="@id/jeans_description"/>



</androidx.constraintlayout.widget.ConstraintLayout>